<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <TextView
        android:id="@+id/coinsNames"
        android:text="Moeda convertida"
        android:textSize="40dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="50"
        android:textSize="107dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/coinsNames"
        app:layout_constraintEnd_toEndOf="parent"/>


    <RadioGroup
        android:orientation="horizontal"
        android:id="@+id/buttonGroup"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/value"
        app:layout_constraintEnd_toEndOf="parent"
        >

        <RadioButton
            android:layout_marginBottom="40dp"
            android:id="@+id/btnActualValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Valor atual" />

        <RadioButton
            android:id="@+id/btnMaximumValue"
            android:text="Máximo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <RadioButton
            android:id="@+id/btnMinimumValue"
            android:text="Mínimo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <RadioButton
            android:id="@+id/btnVariation"
            android:text="% Variação"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


    </RadioGroup>

    <Button
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="@id/buttonGroup"
        app:layout_constraintStart_toStartOf="@id/buttonGroup"
        app:layout_constraintTop_toBottomOf="@id/buttonGroup"
        android:id="@+id/delete_coin"
        android:backgroundTint="@color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Deletar moeda"/>

</androidx.constraintlayout.widget.ConstraintLayout>